FROM python:3.11-bookworm

COPY --from=gcr.io/kaniko-project/executor:debug /kaniko/executor /kaniko/executor

RUN apt-get update && apt-get install -y --no-install-recommends \
    bash curl dnsutils jq vim unzip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" \
    && unzip -q awscliv2.zip \
    && ./aws/install \
    && rm -rf awscliv2.zip aws \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

RUN wget https://github.com/containerd/nerdctl/releases/download/v1.5.0/nerdctl-1.5.0-linux-amd64.tar.gz \
&& tar -zxf nerdctl-1.5.0-linux-amd64.tar.gz nerdctl \
&& sudo mv nerdctl /usr/bin/nerdctl \
&& rm nerdctl-1.5.0-linux-amd64.tar.gz

COPY /files/kaniko/requirments.txt .

RUN pip install -r requirments.txt

# 실행 권한 설정
RUN chmod +x /kaniko/executor